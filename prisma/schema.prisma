generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum CancellationPenaltyType {
  FIRST_NIGHT_PLUS_TAX
  PERCENT_OF_STAY
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  name          String
  emailVerified Boolean         @default(false) @map("email_verified")
  image         String?
  role          Role            @default(USER)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  authSessions  AuthSession[]
  accounts      AuthAccount[]

  @@map("users")
}

model Property {
  id                 String                      @id
  pmsProvider        String?                     @map("pms_provider")
  pmsPropertyId      String?                     @map("pms_property_id")
  name               String?
  timezone           String
  defaultCurrency    String                      @map("default_currency")
  addressLine1       String?                     @map("address_line1")
  city               String?
  state              String?
  postalCode         String?                     @map("postal_code")
  country            String?
  phone              String?
  email              String?
  createdAt          DateTime                    @default(now()) @map("created_at")
  updatedAt          DateTime                    @updatedAt @map("updated_at")
  frontDeskHours     PropertyFrontDeskHours[]
  commerceConfig     PropertyCommerceConfig?
  roomTierOverrides  RoomTierOverride[]
  content            PropertyContent?
  amenities          PropertyAmenity[]
  stayPolicy         PropertyStayPolicy?
  cancellationPolicies PropertyCancellationPolicy[]

  @@unique([pmsProvider, pmsPropertyId])
  @@map("properties")
}

model PropertyFrontDeskHours {
  id        String   @id @default(cuid())
  property  Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String  @map("property_id")
  dayOfWeek Int      @map("day_of_week")
  openTime  String   @map("open_time")
  closeTime String   @map("close_time")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([propertyId, dayOfWeek])
  @@map("property_front_desk_hours")
}

model PropertyCommerceConfig {
  property      Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId    String   @id @map("property_id")
  strategyMode  String   @default("balanced") @map("strategy_mode")
  upsellPosture String?  @map("upsell_posture")
  cancellationSensitivity String? @map("cancellation_sensitivity")
  urgencyEnabled Boolean @default(true) @map("urgency_enabled")
  allowedUrgencyTypes String? @map("allowed_urgency_types")
  defaultCurrency String? @map("default_currency")
  enableTextLink Boolean @default(true) @map("enable_text_link")
  enableTransferFrontDesk Boolean @default(true) @map("enable_transfer_front_desk")
  enableWaitlist Boolean @default(true) @map("enable_waitlist")
  webBookingUrl String? @map("web_booking_url")
  version      Int      @default(1)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("property_commerce_config")
}

model RoomTierOverride {
  id         String   @id @default(cuid())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String   @map("property_id")
  roomTypeId String   @map("room_type_id")
  tier       String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([propertyId, roomTypeId])
  @@map("room_tier_overrides")
}

model PropertyContent {
  property         Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId       String   @id @map("property_id")
  overviewMarketing String? @map("overview_marketing")
  neighborhoodHighlights Json? @map("neighborhood_highlights")
  vibeTags         String[] @default([]) @map("vibe_tags")
  version          Int      @default(1)
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("property_content")
}

model PropertyAmenity {
  id         String   @id @default(cuid())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String   @map("property_id")
  key        String
  detailsJson Json?   @map("details_json")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([propertyId, key])
  @@map("property_amenities")
}

model PropertyStayPolicy {
  property                        Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId                      String   @id @map("property_id")
  checkInTime                     String?  @map("check_in_time")
  checkOutTime                    String?  @map("check_out_time")
  lateCheckoutTime                String?  @map("late_checkout_time")
  lateCheckoutFeeCents            Int?     @map("late_checkout_fee_cents")
  lateCheckoutCurrency            String?  @map("late_checkout_currency")
  afterHoursArrivalCutoff         String?  @map("after_hours_arrival_cutoff")
  afterHoursArrivalInstructions   String?  @map("after_hours_arrival_instructions")
  smokingPenaltyCents             Int?     @map("smoking_penalty_cents")
  smokingPenaltyCurrency          String?  @map("smoking_penalty_currency")
  petFeePerNightCents             Int?     @map("pet_fee_per_night_cents")
  petFeeCurrency                  String?  @map("pet_fee_currency")
  petPolicyRequiresNoteAtBooking  Boolean  @default(false) @map("pet_policy_requires_note_at_booking")
  dogFriendlyRoomsLimited         Boolean  @default(false) @map("dog_friendly_rooms_limited")
  idRequired                      Boolean  @default(true) @map("id_required")
  creditCardRequired              Boolean  @default(true) @map("credit_card_required")
  termsText                       String?  @map("terms_text")
  version                         Int      @default(1)
  createdAt                       DateTime @default(now()) @map("created_at")
  updatedAt                       DateTime @updatedAt @map("updated_at")

  @@map("property_stay_policies")
}

model PropertyCancellationPolicy {
  id                      String                  @id @default(cuid())
  property                Property                @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId              String                  @map("property_id")
  name                    String
  appliesToRoomTypeIds    String[]                @default([]) @map("applies_to_room_type_ids")
  effectiveStartMonthDay  String?                 @map("effective_start_month_day")
  effectiveEndMonthDay    String?                 @map("effective_end_month_day")
  freeCancelDaysBefore    Int                     @map("free_cancel_days_before")
  freeCancelCutoffTime    String                  @map("free_cancel_cutoff_time")
  penaltyType             CancellationPenaltyType @map("penalty_type")
  penaltyValue            Int?                    @map("penalty_value")
  chargeHoursBeforeArrival Int?                   @map("charge_hours_before_arrival")
  policyTextLong          String?                 @map("policy_text_long")
  policySummaryTemplate   String?                 @map("policy_summary_template")
  priority                Int                     @default(100)
  version                 Int                     @default(1)
  createdAt               DateTime                @default(now()) @map("created_at")
  updatedAt               DateTime                @updatedAt @map("updated_at")

  @@index([propertyId, priority])
  @@map("property_cancellation_policies")
}

model AuthSession {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")

  @@map("auth_sessions")
}

model AuthAccount {
  id                     String   @id @default(cuid())
  accountId              String   @map("account_id")
  providerId             String   @map("provider_id")
  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId                 String   @map("user_id")
  accessToken            String?  @map("access_token")
  refreshToken           String?  @map("refresh_token")
  idToken                String?  @map("id_token")
  accessTokenExpiresAt   DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt  DateTime? @map("refresh_token_expires_at")
  scope                  String?
  password               String?
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  @@unique([providerId, accountId])
  @@map("auth_accounts")
}

model AuthVerification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("auth_verifications")
}
